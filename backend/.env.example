# Configurações básicas
APP_NAME=NET-EST API
VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=127.0.0.1
PORT=8000
FALLBACK_PORT=8080
RELOAD=true

# Hot Reload Control (overrides RELOAD setting above)
# Set to "false" or "0" to disable auto-reload (reduces ghost process issues)
# Set to "true" or "1" to enable (default if not specified)
# UVICORN_RELOAD=false

# CORS - URLs permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Limites de processamento
MAX_WORDS_LIMIT=2000
MAX_FILE_SIZE_MB=10

# Modelos e API (para futuro uso)
BERTIMBAU_MODEL=paraphrase-multilingual-MiniLM-L12-v2
SIMILARITY_THRESHOLD=0.5
